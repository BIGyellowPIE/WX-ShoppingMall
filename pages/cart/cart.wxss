.title{
  margin-top: 10rpx;
  display: block;
  text-align: left;
  margin-left: 40rpx;
  margin-bottom: 10rpx;
}
scroll-view{
  height: 100vh;
  width: 100%;
}
.content{
  display: flex;
  flex-direction: column;
  align-items: center;
  width: 100%;
  margin-top: 20rpx;
}
.product{
  width: 90%;
  display: flex;
  flex-direction: row;
  align-items: center;
  background-color: rgb(255,252,252);
  border: 1px solid #576b95;
  border-radius: 16rpx;
  margin-bottom: 10rpx;
}

.product .info{
  width: 100%;
  height: 100%;
  display: flex;
  flex-direction: column;
  margin-left: 30rpx;
}

.info .price{
  color: #ee0000;
  margin-top: 16rpx;
}

.content image{
  width: 200rpx;
  border-radius: 16rpx;
}

.bottom{
  width: 100%;
  position: absolute;
  bottom: 0;
  left: 0;
}